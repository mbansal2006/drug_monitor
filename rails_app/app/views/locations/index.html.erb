<h1>Locations</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Country</th>
      <th>Risk Score</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |loc| %>
      <tr>
        <td><%= link_to loc.location_id, location_path(loc) %></td>
        <td><%= loc.country %></td>
        <td><%= loc.risk_score %></td>
      </tr>
    <% end %>
  </tbody>
</table>
